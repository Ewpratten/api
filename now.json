{
    "version": 2,
    "name": "api",
    "builds": [
        {
            "src": "**/*.py",
            "use": "@now/python@canary"
        },
        {
            "src": "apidocs/**",
            "use": "@now/static"
        },
        {
            "src": "apidocs/swagger.yaml",
            "use": "@now/static"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "authorization"
                },
                {
                    "key": "RetryLife-Service-Source",
                    "value": "lambda"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/.*",
            "dest": "/router.py"
        },
        {
            "src": "/",
            "dest": "/router.py"
        }
    ]
}