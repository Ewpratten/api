{
    "version": 2,
    "name": "api",
    "builds": [
        {
            "src": "**/*.py",
            "use": "@now/python@canary"
        },
        {
            "src": "apidocs/**",
            "use": "@now/static"
        },
        {
            "src": "apidocs/swagger.yaml",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/.*",
            "dest": "/router.py",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "authorization",
                "RetryLife-Service-Source": "lambda"
            }
        },
        {
            "src": "/",
            "dest": "/router.py",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "authorization",
                "RetryLife-Service-Source": "lambda"
            }
        }
    ]
}