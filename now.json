{
    "version": 2,
    "name": "api",
    "builds": [
        {
            "src": "**/*.py",
            "use": "@now/python@canary"
        },
        {
            "src": "apidocs/**",
            "use": "@now/static"
        },
        {
            "src": "apidocs/swagger.yaml",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "**/*",
            "dest": "/router.py",
            "headers": {
                "Access-Control-Allow-Origin": "*"
            }
        },
        {
            "src": "/",
            "dest": "/router.py",
            "headers": {
                "Access-Control-Allow-Origin": "*"
            }
        }
    ]
}